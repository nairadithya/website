---
import ThemeIcon from './ThemeIcon.astro';
---
<div class="w-full md:w-24 fixed left-0 md:top-0 bottom-0 right-0 md:h-screen flex items-center flex-row md:flex-col gap-8 py-4 z-50">
      <!-- list menu -->
      <div class="w-full my-auto md:w-auto flex flex-row md:flex-col items-center md:gap-4">
	<!-- Essays -->
	<div class="items-center rounded hover:bg-stone-50">
	<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 mx-auto ">
