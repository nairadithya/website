---
interface Props {
	heading: string;
	content: string;
}

const {heading, content} = Astro.props;
---
<div class="bg-white box-border mx-auto w-96 border-dotted border-2 border-orange-100 border-rounded">
    <div class="mx-auto max-w-md">
      <h1 class = "py-2 text-3xl text-center">{heading}<h1>
      <div>
        <div class="space-y-6 py-3 text-center text-base leading-7 text-gray-600">
          {content}
        </div>
      </div>
    </div>
  </div>
