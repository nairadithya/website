---
interface Props {
    date: Date
}

const { date } = Astro.props
const parsedDate = typeof date === 'string' ? new Date(date) : date
---

<time datetime={parsedDate.toISOString()}>
    {
        parsedDate.toLocaleDateString('en-uk', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
        })
    }
</time>
