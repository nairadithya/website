---
import HomeLayout from '../layouts/HomeLayout.astro'
import githubIcon from '../assets/github.svg'
import letterboxd from '../assets/letterboxd.svg'
import linkedin from '../assets/linkedin.svg'
---

<HomeLayout title="Adithya Nair.">
    <div class="flex h-screen w-screen items-center justify-center">
        <div class="mx-10 flex flex-col gap-10 py-14">
            <div class="text-center text-7xl text-text">
                <div class="inline">Hi,</div> I'm <p
                    class="semibold inline text-mauve"
                >
                    Adithya.
                </p>
            </div>
            <div class="text-wrap text-center text-3xl text-subtext1">
                I'm a student, writer and programmer.
                <div class="pt-4">Welcome to my home on the internet.</div>
            </div>
            <div
                class="mx-auto flex w-fit flex-col items-center gap-4 text-3xl text-mauve md:flex-row"
            >
                <a href="essays/"><div>Essays</div></a>
                <a href="journal/"> <div>Journal</div></a>
                <a href="bookmarks/"><div>Bookmarks</div></a>
                <a href="about/"><div>About</div></a>
            </div>
        </div>
        <div
            class="absolute bottom-3 mx-auto flex flex-col items-center gap-8 text-center text-xl text-mauve md:bottom-4 md:text-xs"
        >
            <div class="flex items-center">
                <a href="https://github.com/nairadithya" class="mx-4">
                    <picture>
                        <img
                            class="w-5 md:w-9"
                            src={githubIcon.src}
                            alt="GitHub"
                        />
                    </picture>
                </a>
                <a href="https://letterboxd.com/AdithyaNair/" class="mx-4">
                    <picture>
                        <img
                            class="w-5 md:w-9"
                            src={letterboxd.src}
                            alt="Letterboxd"
                        />
                    </picture>
                </a>
                <a
                    href="www.linkedin.com/in/adithya-nair-181120282"
                    class="mx-4"
                >
                    <picture>
                        <img
                            class="w-5 md:w-9"
                            src={linkedin.src}
                            alt="Linkedin"
                        />
                    </picture>
                </a>
            </div>
            <div
                class="flex items-center gap-4 text-center text-xl text-mauve md:text-lg"
            >
                <a href="https://amrita.town"> amrita.town </a>
                <a href="https://amrita.town/prev" class="">&#8592;</a>
                <a href="https://amrita.town/random" class="">&#9860;</a>
                <a href="https://amrita.town/next" class="">&#8594;</a>
            </div>
        </div>
    </div>
</HomeLayout>
