---
import NavBar from '../components/NavBar.astro'
import { ViewTransitions } from 'astro:transitions'
interface Props {
    title: string
}

const { title } = Astro.props
---

<!doctype html>
<html transition:animate="fade" lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Interesting description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <NavBar transition:none transition:persist />
    <main class="flex flex-row gap-4 px-2 pt-20 md:pl-24 md:pr-0 md:pt-0">
        <div class="flex w-full flex-col gap-12 overflow-hidden md:gap-2">
            <slot />
        </div>
    </main>
</html>
