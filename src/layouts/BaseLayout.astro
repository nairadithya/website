---
import NavBar from '@/components/NavBar.astro'
import MobileThemeSwitcher from '@/components/MobileThemeSwitcher.astro'
import Head from '@/components/Head.astro'
interface Props {
    title: string
    description: string
}

const { title, description } = Astro.props
---

<!doctype html>
<html
    class="selection:text-bg selection:bg-fg bg-bg text-fg h-full font-serif"
    lang="en"
>
    <Head
        title={title}
        description={description
            ? description
            : "Ideally, there should be a description here, but I seem to have forgotten. If you know me, just let me know I've been sloppy."}
    />
    <main class="min-h-screen w-full py-1">
        <NavBar />
        <div class="px-5">
            <div class="mx-auto flex items-center justify-between md:w-1/2">
                <div
                    class="text-fg dark:text-fg py-8 text-4xl font-extrabold select-none"
                >
                    {title}
                </div>
                <div class="md:hidden">
                    <MobileThemeSwitcher />
                </div>
            </div>
            <div class="mx-auto md:w-1/2">
                <slot />
            </div>
        </div>
    </main>
</html>
