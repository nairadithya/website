---
interface Props {
    title: string
}

const { title } = Astro.props
---

<!doctype html>
<html class="h-full" lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Adithya Nair's home on the Internet."
        />
        <meta name="author" content="Adithya Nair" />
        <meta name="viewport" content="width=device-width" />
        <link
            rel="alternate"
            type="application/rss+xml"
            title="Adithya Nair's Website"
            href={new URL('rss.xml', Astro.site)}
        />
        <link rel="icon" href="favicon.ico" type="image/x-icon" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <style>
        html,
        body {
            height: 100%;
            accent-color: #1e1e2e;
            margin: 0;
            padding: 0;
            background-color: #1e1e2e;
            background-size: 10px 10px;
            overflow: hidden;
        }
        main {
            min-height: 100vh;
        }
        svg:hover {
            color: #1e1e2e;
        }
    </style>
    <main class="mocha min-h-screen w-full bg-base py-1">
        <slot />
    </main>


</html>
